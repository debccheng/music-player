{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src/",
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "typeRoots": ["src/types", "src/global.d.ts"],
    "lib": ["ESNext", "dom"]
  },
  "include": ["src/**/*", "src/global.d.ts"]
}